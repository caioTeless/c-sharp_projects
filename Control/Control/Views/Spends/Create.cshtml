@model Control.Models.ViewModels.CompleteViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h3>
    Create Page
</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!--<div asp-validation-summary="All" class="text-danger"></div>-->
            <div class="form-group">
                <label asp-for="Spend.Date" class="control-label"></label>
                <input asp-for="Spend.Date" class="form-control" />
                <span asp-validation-for="Spend.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Spend.Liters" class="control-label"></label>
                <input asp-for="Spend.Liters" class="form-control" />
                <span asp-validation-for="Spend.Liters" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Spend.Value" class="control-label"></label>
                <input asp-for="Spend.Value" class="form-control" />
                <span asp-validation-for="Spend.Value" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Spend.FuelId" class="control-label"></label>
                <select asp-for="Spend.FuelId" asp-items="@(new SelectList(Model.Fuels, "Id",
                "Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}