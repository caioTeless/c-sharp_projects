@model Control.Models.ViewModels.CompleteViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Spend.Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Spend.Date" class="control-label"></label>
                <input asp-for="Spend.Date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Spend.Liters" class="control-label"></label>
                <input asp-for="Spend.Liters" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Spend.Value" class="control-label"></label>
                <input asp-for="Spend.Value" class="form-control" />
            </div>
            <div class="form-group">
                <select asp-for="Spend.FuelId" asp-items="@(new SelectList(Model.Fuels, "Id", "Name"))"
                        class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">Back</a>
            </div>
        </form>
    </div>

</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}